name: Run Maven Test for Specific File

on:
  push:  # Runs the action on every push
    branches:
      - main  # Change to your branch if needed

jobs:
  test:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Set up JDK 22
        uses: actions/setup-java@v3
        with:
          distribution: 'temurin'
          java-version: '22'
          cache: maven

      - name: Build with Maven
        run: mvn clean install

      - name: Run Specific Test File
        run: mvn test -Dtest=YourTestFile
